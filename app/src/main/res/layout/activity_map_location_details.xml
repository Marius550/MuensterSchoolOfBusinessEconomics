<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.mariuspilgrim.muensterschoolofbusinesseconomics.GoogleMaps.MapLocationDetailsActivity">

<ImageView
    android:id="@+id/wwu_map_location_details_image"
    android:scaleType="fitStart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/wwu_map_location_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="16sp"
        android:layout_marginTop="250dp"
        android:textColor="@color/wwu_grey"/>
    <TextView
        android:id="@+id/wwu_map_location_details_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="16sp"
        android:layout_below="@+id/wwu_map_location_details_title"
        android:textColor="@color/wwu_grey"/>
    <TextView
        android:id="@+id/wwu_map_location_details_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="16sp"
        android:layout_below="@+id/wwu_map_location_details_address"
        android:textColor="@color/wwu_grey"/>

</RelativeLayout>
